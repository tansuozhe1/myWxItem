.edit-box .top-bgBox{
  width: 100%;
  height:300rpx;
  background-color:#5fb7df;
  display: flex;
  justify-content: center;
  align-items: center;
}
.edit-box .top-bgBox .icon-name{
  width:160rpx;
  height:200rpx;
}
.edit-box .top-bgBox .icon-name .icon-box{
  width:120rpx;
  height:120rpx;
  background:white;
  border-radius:50%;
  overflow:hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0rpx auto;
}
.edit-box .top-bgBox .icon-name .icon-box .auto-img{
  display:block;
  width:80rpx;
  height:80rpx;
}
.edit-box .top-bgBox .icon-name .name{
  color:black;
  font-size: 32rpx;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
}

/* 内容盒子 */
.edit-box .content-box{
  background-color:#fff;
  width: 100%;
  /* padding-left:40rpx; */
  border-bottom:2rpx solid #ccc;
}
/* 公共样式 */
.edit-box .content-box .text{
  width: 20%;
  text-align:left;
  color:#535353e8;
}
.edit-box .content-box .type,.pay-type,.money,.date,.comment{
  display: flex;
  height:120rpx;
  align-items: center;
  border-bottom:2rpx solid #ccc;
  margin-left:40rpx;
}


.edit-box .content-box .info{
  flex:1;
  text-align: left;
}
.edit-box .content-box .date .info .picker-box{
  height: 120rpx;
  line-height:120rpx;
}
.edit-box .content-box .comment{
  height:160rpx;
  align-items:flex-start;
  margin-top:40rpx;
  border:0rpx;
}

.edit-box .content-box .comment .info .textarea-box{
  height:160rpx;
  width:90%;
}


/* 底部编辑栏 */
.bottomEdit-box{
  position:fixed;
  left:0rpx;
  bottom:0rpx;
  height:120rpx;
  width: 100%;
  display: flex;
  background-color:#fff;
}
.bottomEdit-box .edit{
  width: 50%;
  height:120rpx;
  line-height: 120rpx;
  border-right:2rpx solid #ccc;
  text-align: center;
  color:#535353e8;
}
.bottomEdit-box .delete{
  width: 50%;
  height:120rpx;
  line-height: 120rpx;
  border-right:2rpx solid #ccc;
  text-align: center;
  color:#535353e8;
}
.bottomEdit-box .edit:active{
  background-color:#bbb;
  color:black;
}
.bottomEdit-box .delete:active{
  background-color:#bbb;
  color:black;
}

/* 保存按钮 */
.saveBtn{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background:#3ec7e4;
  margin:80rpx auto;
  text-align: center;
  border-radius:30rpx;
}
.saveBtn:active{
  background:#2b809e;
}
